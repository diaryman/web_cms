{
    "kind": "collectionType",
    "collectionName": "policies",
    "info": {
        "singularName": "policy",
        "pluralName": "policies",
        "displayName": "Policies & Standards",
        "description": "Compliance policies and standards information"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "description": {
            "type": "richtext"
        },
        "icon": {
            "type": "string",
            "default": "ShieldCheck"
        },
        "category": {
            "type": "enumeration",
            "enum": [
                "standard",
                "compliance",
                "certification",
                "security"
            ],
            "default": "standard"
        },
        "domain": {
            "type": "string",
            "required": true,
            "default": "localhost:3000"
        },
        "order": {
            "type": "integer",
            "default": 0
        },
        "isActive": {
            "type": "boolean",
            "default": true
        },
        "highlightValue": {
            "type": "string"
        }
    }
}