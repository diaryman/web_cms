{
    "kind": "collectionType",
    "collectionName": "articles",
    "info": {
        "singularName": "article",
        "pluralName": "articles",
        "displayName": "Article",
        "description": "News and Articles"
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "title",
            "required": true
        },
        "content": {
            "type": "dynamiczone",
            "components": [
                "shared.rich-text",
                "shared.hero",
                "shared.news-grid"
            ]
        },
        "coverImage": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "category": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::category.category",
            "inversedBy": "articles"
        },
        "publishedAt": {
            "type": "datetime"
        },
        "domain": {
            "type": "string"
        }
    }
}